---
import Layout from '../layouts/Layout.astro';
import Timer from '@components/Timer/Timer.astro';
import Invitation from '@components/Invitation/Invitation.astro';
import YandexMap from '@components/YandexMap/YandexMap.astro';
import Divider from '@components/Divider/Divider.astro';
import Carousel from '@components/Carousel/Carousel.astro';
import Wishes from '@components/Wishes/Wishes.astro';
import FormGuestes from '@components/FormGuestes/FormGuestes.astro';
import WelcomeSignature from '@components/WelcomeSignature/WelcomeSignature.astro';
import FotoZone from '@components/FotoZone/FotoZone.astro';
import TimingDay from '@components/TimingDay/TimingDay.astro';
---

<Layout title="Молодожены">
  <header class="header">
    <div class="header__background"></div>
    <section class="header__wrapper">
      <h2 class="header__title">Денис и Юлия</h2>
      <p class="date">22.06.2024</p>
    </section>
  </header>
  <main>
    <section class="wrapper">
      <Divider />
      <Invitation />
      <Divider />
      <Carousel />
      <Divider />
      <YandexMap />
      <Divider />
      <TimingDay />
      <Divider />
      <Wishes />
      <Divider />
      <FotoZone />
      <Divider />
      <!-- <FormGuestes />
      <Divider /> -->
      <WelcomeSignature />
      <Divider />
    </section>
  </main>

  <style lang="scss">
    .header {
      display: flex;
      justify-content: center;
      align-items: center;

      &__background {
        width: 100%;
        max-width: 700px;
        height: 720px; // 1049px
        background-image: url('/public/photo_4.jpg');
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
        border-color: transparent;
        //   border-style: solid;
        position: relative;
        @media (min-width: 700px) {
          height: 1200px;
        }

        @media (min-width: 600px) {
          height: 1000px;
        }
      }

      &__wrapper {
        color: #fff;
        position: absolute;
      }

      &__title {
        font-family: 'Great Vibes', cursive;
        font-weight: 400;
        font-size: 55px; //100px
        margin-top: -325px; // -480
        color: #f5f5f5;
        text-wrap: wrap;
        text-shadow: none;
        @media (min-width: 700px) {
          font-size: 70px;
          margin-top: -440px;
        }

        @media (min-width: 600px) {
          font-size: 70px;
          margin-top: -440px;
        }
      }

      .date {
        color: #ffffff;
        font-family: 'Great Vibes', cursive;
        font-weight: 500;
        font-size: 48px;
        margin-top: 10px;
        text-align: center;
        //   text-shadow: 8px 2px 10px rgb(252, 252, 252);
      }
    }

    main {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    .wrapper {
      background-color: #fff;
      max-width: 700px;
      & > div {
        padding: 0px 10px;
      }
    }
  </style>
</Layout>
